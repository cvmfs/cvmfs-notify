[Unit]
Description=CernVM-FS Notification System
After=syslog.target network.target

[Service]
Type=simple
Environment="RUNNER_LOG_DIR=/var/log/cvmfs-notify-runner"
ExecStart=/usr/libexec/cvmfs-notify/bin/cvmfs_notify foreground
PIDFile=/var/run/cvmfs-notify.pid
StandardOutput=journal
Restart=always
RestartSec=5
User=root

[Install]
WantedBy=multi-user.target
